{
  "name": "molpot",
  "id": "molpot",
  "version": "1.0.0",
  "description": "Molpot Dev Container Feature",
  "dependsOn": {
    "ghcr.io/devcontainers/features/conda:1": {}
  },
  "customizations": {
    "vscode": {
        "extensions": [
            "ms-python.python",
            "ms-python.black-formatter",
            "ms-python.isort"
        ]
    }
  },
  "options": {
    // if enable CUDA support
    "enable_cuda": {
      "type": "boolean",
      "default": false,
      "description": "Enable CUDA support"
    }
  }
}
